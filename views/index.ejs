<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Watch Inventory Manager</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <!-- Header -->
  <nav class="navbar navbar-dark bg-dark mb-4">
    <div class="container-fluid">
      <span class="navbar-brand mb-0 h1">
        <i class="bi bi-watch"></i> Watch Inventory Manager
      </span>
      <button class="btn btn-light" data-bs-toggle="modal" data-bs-target="#addProductModal">
        <i class="bi bi-plus-circle"></i> Add New Watch
      </button>
    </div>
  </nav>

  <!-- Main Content -->
  <div class="container">
    <!-- Stats Cards -->
    <div class="row mb-4">
      <div class="col-md-4">
        <div class="card text-center stats-card">
          <div class="card-body">
            <h3 class="card-title"><%= products.length %></h3>
            <p class="card-text text-muted">Total Products</p>
          </div>
        </div>
      </div>
      <div class="col-md-4">
        <div class="card text-center stats-card">
          <div class="card-body">
            <h3 class="card-title"><%= products.reduce((sum, p) => sum + p.quantity, 0) %></h3>
            <p class="card-text text-muted">Total Stock</p>
          </div>
        </div>
      </div>
      <div class="col-md-4">
        <div class="card text-center stats-card">
          <div class="card-body">
            <h3 class="card-title">$<%= products.reduce((sum, p) => sum + (p.price * p.quantity), 0).toFixed(2) %></h3>
            <p class="card-text text-muted">Inventory Value</p>
          </div>
        </div>
      </div>
    </div>

    <!-- Products Grid -->
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 row-cols-xl-4 g-4" id="productsGrid">
      <% products.forEach(product => { %>
        <div class="col" data-product-id="<%= product.id %>">
          <div class="card h-100 product-card">
            <img src="<%= product.image_url %>" class="card-img-top" alt="<%= product.name %>">
            <div class="card-body">
              <h5 class="card-title"><%= product.name %></h5>
              <p class="text-muted mb-2"><small><%= product.brand %></small></p>
              <p class="card-text"><small><%= product.description %></small></p>
              <div class="d-flex justify-content-between align-items-center mb-2">
                <span class="h5 mb-0">$<%= product.price.toFixed(2) %></span>
                <span class="badge <%= product.quantity > 10 ? 'bg-success' : product.quantity > 5 ? 'bg-warning' : 'bg-danger' %>">
                  Stock: <%= product.quantity %>
                </span>
              </div>
            </div>
            <div class="card-footer bg-transparent">
              <div class="d-flex gap-2 align-items-center">
                <div class="input-group input-group-sm flex-grow-1">
                  <button class="btn btn-outline-secondary quantity-btn" data-action="decrease" data-id="<%= product.id %>">
                    <i class="bi bi-dash"></i>
                  </button>
                  <input type="number" class="form-control text-center quantity-input" 
                         data-id="<%= product.id %>" 
                         value="<%= product.quantity %>" 
                         min="0">
                  <button class="btn btn-outline-secondary quantity-btn" data-action="increase" data-id="<%= product.id %>">
                    <i class="bi bi-plus"></i>
                  </button>
                </div>
                <button class="btn btn-sm btn-danger delete-btn" data-id="<%= product.id %>">
                  <i class="bi bi-trash"></i>
                </button>
              </div>
            </div>
          </div>
        </div>
      <% }); %>
    </div>
  </div>

  <!-- Add Product Modal -->
  <div class="modal fade" id="addProductModal" tabindex="-1">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">Add New Watch</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
        </div>
        <div class="modal-body">
          <form id="addProductForm">
            <div class="mb-3">
              <label class="form-label">Name *</label>
              <input type="text" class="form-control" name="name" required>
            </div>
            <div class="mb-3">
              <label class="form-label">Brand *</label>
              <input type="text" class="form-control" name="brand" required>
            </div>
            <div class="mb-3">
              <label class="form-label">Description</label>
              <textarea class="form-control" name="description" rows="2"></textarea>
            </div>
            <div class="mb-3">
              <label class="form-label">Price ($) *</label>
              <input type="number" class="form-control" name="price" step="0.01" min="0" required>
            </div>
            <div class="mb-3">
              <label class="form-label">Quantity</label>
              <input type="number" class="form-control" name="quantity" min="0" value="0">
            </div>
            <div class="mb-3">
              <label class="form-label">Image URL</label>
              <input type="url" class="form-control" name="image_url" placeholder="https://example.com/image.jpg">
            </div>
          </form>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
          <button type="button" class="btn btn-primary" id="saveProductBtn">Save Watch</button>
        </div>
      </div>
    </div>
  </div>

  <!-- Toast Notification -->
  <div class="position-fixed bottom-0 end-0 p-3" style="z-index: 11">
    <div id="toast" class="toast" role="alert">
      <div class="toast-header">
        <strong class="me-auto">Notification</strong>
        <button type="button" class="btn-close" data-bs-dismiss="toast"></button>
      </div>
      <div class="toast-body" id="toastMessage"></div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script src="/js/app.js"></script>
</body>
</html>
